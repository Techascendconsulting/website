# Copy this file to `.env.local` and fill in the values.
# Do NOT commit `.env.local` to Git. It is ignored to protect secrets.

# Supabase Configuration (Required)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Stripe Configuration (Optional - for billing features)
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret
STRIPE_STARTER_PRICE_ID=price_starter_plan_id
STRIPE_PRO_PRICE_ID=price_pro_plan_id

# OpenAI Configuration (Optional - for AI features)
OPENAI_API_KEY=your_openai_api_key

# Buffer Integration (Optional - for social media posting)
BUFFER_CLIENT_ID=your_buffer_client_id
BUFFER_CLIENT_SECRET=your_buffer_client_secret

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Optional: External APIs for trends and social listening
GOOGLE_TRENDS_API_KEY=your_google_trends_key
TWITTER_API_BEARER_TOKEN=your_twitter_bearer_token
FACEBOOK_GRAPH_API_TOKEN=your_facebook_token